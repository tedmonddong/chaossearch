{
   "name":"{{monitor_name}}",
   "type":"monitor",
   "enabled":true,
   "schedule":{
      "period":{
         "interval":{{interval_value}},
         "unit":"{{interval_unit_name}}"
      }
   },
   "inputs":[
      {
         "search":{
            "indices":{{indices}},
            "query":{
               "size":{{size}},
               "query":{
                  "bool":{
                     "filter":[
                        {
                           "range":{
                              "timestamp":{
                                 "gte":"{{timestamp_from}}",
                                 "lte":"{{timestamp_to}}",
                                 "format":"epoch_millis"
                              }
                           }
                        }
                     ]
                  }
               },
               "aggregations":{
                  "when":{
                     "{{aggregation_type}}":{
                        "field":"{{field_name}}"
                     }
                  }
               }
            }
         }
      }
   ],
   "triggers":[
      {
         "name":"{{trigger_name}}",
         "severity":"1",
         "condition":{
            "script":{
               "lang":"painless",
               "source":"{{source_conv}}"
            }
         },
         "actions":[],
         "min_time_between_executions":null,
         "rolling_window_size":null
      }
   ],
   "ui_metadata":{
      "schedule":{
         "timezone":null,
         "frequency":"interval",
         "period":{
            "unit":"{{interval_unit_name}}",
            "interval":{{interval_value}}
         },
         "daily":0,
         "weekly":{
            "mon":false,
            "tue":false,
            "wed":false,
            "thur":false,
            "fri":false,
            "sat":false,
            "sun":false
         },
         "monthly":{
            "type":"day",
            "day":1
         },
         "cronExpression":"0 */1 * * *"
      },
      "search":{
         "searchType":"graph",
         "aggregationType":"{{aggregation_type}}",
         "timeField":"{{time_field}}",
         "fieldName":"{{field_name}}",
         "overDocuments":"all documents",
         "groupedOverTop":{{term_size}},
         "groupedOverFieldName":"{{term_field}}",
         "bucketValue":{{bucket_value}},
         "bucketUnitOfTime":"{{bucket_uot}}",
         "where":{
            "fieldName":[
            ],
            "operator":"is",
            "fieldValue":"",
            "fieldRangeStart":0,
            "fieldRangeEnd":0
         }
      },
      "triggers":{
         "{{trigger_name}}":{
            "value":{{trigger_threshold}},
            "enum":"{{trigger_enum}}"
         }
      }
   }
}